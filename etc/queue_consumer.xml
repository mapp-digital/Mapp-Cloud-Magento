<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework-message-queue:etc/consumer.xsd">
    <consumer name="mappdigital.cloud.triggers.consume_amqp"
              queue="mappdigital.cloud.triggers.consume_amqp"
              consumerInstance="Magento\Framework\MessageQueue\Consumer"
              handler="MappDigital\Cloud\Model\QueueMessage\Trigger\ConsumeQueue::processAll"
              connection="amqp"
              maxMessages="1"
    />
    <consumer name="mappdigital.cloud.entities.export.amqp"
              queue="mappdigital.cloud.entities.export.amqp"
              consumerInstance="Magento\Framework\MessageQueue\Consumer"
              handler="MappDigital\Cloud\Model\QueueMessage\Exporter\ConsumeQueue::processAll"
              connection="amqp"
              maxMessages="1"
    />
    <consumer name="mappdigital.cloud.entities.export.catalog.product.amqp"
              queue="mappdigital.cloud.entities.export.catalog.product.amqp"
              consumerInstance="Magento\Framework\MessageQueue\Consumer"
              handler="MappDigital\Cloud\Model\Connect\Catalog\Product\Consumer::processMessage"
              connection="amqp"
              maxMessages="1"
    />
    <consumer name="mappdigital.cloud.entities.campaigns.abandoned.cart.amqp"
              queue="mappdigital.cloud.entities.campaigns.abandoned.cart.amqp"
              consumerInstance="Magento\Framework\MessageQueue\Consumer"
              handler="MappDigital\Cloud\Model\QueueMessage\Campaigns\AbandonedCart::processMessage"
              connection="amqp"
              maxMessages="1"
    />
    <consumer name="mappdigital.cloud.entities.campaigns.wishlist.amqp"
              queue="mappdigital.cloud.entities.campaigns.wishlist.amqp"
              consumerInstance="Magento\Framework\MessageQueue\Consumer"
              handler="MappDigital\Cloud\Model\QueueMessage\Campaigns\Wishlist::processMessage"
              connection="amqp"
              maxMessages="1"
    />
</config>
